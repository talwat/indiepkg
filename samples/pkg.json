{
    "name": "my_package_name",
    "author": "my username or name",
    "description": "this is my awesome package description",
    "url": "https://github.com/username/repo.git",
    "branch": "my branch",
    "install": [
        "./configure",
        "make",
        "make install PATH=':(PATH):'"
    ],
    "uninstall": [
        "rm :(PATH):/bin/my_file"
    ],
    "update": [
        "rm :(PATH):/bin/my_file",
        "make",
        "make install PATH=:(PATH):"
    ],
    "config_paths": [
        ".config/my_pkg"
    ],
    "deps": {
        "all": [
            "hello-world"
        ],
        "linux": [
            "my-dep",
            "wow"
        ],
        "darwin": [
            "my-other-dep",
            "coreutils"
        ],
        "freebsd": [
            "my-third-dep"
        ]
    }
}